<div class="list-group admin-list-task">
  <div class="row w-100 ml-3 min-max-height">
    <div class="col-md-10 mt-2 border-right">
      <%= link_to task do %>
        <h5 class="row w-100"><%= task.name %></h5>
      <% end %>
      <hr>
      <div class="row w-100"><%= task.content %></div>
    </div>
    <div class="col-md mt-2 ml-2">
      <div class="row w-100">
        <%= link_to "Phê duyệt", admin_task_path(id: task.id, is_approved: true), class: "btn btn-info w-100", method: "put" %>
      </div>
      <div class="row w-100">
        <%= link_to "Hủy bỏ", admin_task_path(id: task.id, is_approved: false), class: "btn btn-danger w-100", method: "put" %>
      </div>
      <div class="row w-100 justify-content-center"><%= link_to "Chi tiết>>", "/tasks/1", class: "btn btn-primary w-100" %></div>
    </div>
  </div>
</div>
