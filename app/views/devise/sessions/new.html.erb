<div class="text-center">
  <h2>Đăng nhập</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label "Email", class: "col-md-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6", placeholder: "Email" %>
    </div>

    <div class="form-group row">
      <%= f.label "Mật khẩu", class: "col-md-3" %><br/>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6", placeholder: "Mật khẩu" %>
    </div>
    <div class="actions">
      <%= f.submit "Đăng nhập", class: "btn btn-primary" %>
    </div>
  <% end %>
  <hr>
  Lần đầu sử dụng
  <%= render "devise/shared/links" %>
</div>
